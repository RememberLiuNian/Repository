<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.baizhi.cmfz.dao.AdminDAO">
    <select id="selectAdminByNameAndPassword" parameterType="java.lang.String" resultType="Admin">
        select id,name,password from admin where name=#{name} and password=#{password}
    </select>
    <!--根据用户名查找-->
    <select id="selectAdminByUsername" parameterType="String" resultType="Admin">
        select id,name,password from admin where name=#{name}
    </select>

</mapper>